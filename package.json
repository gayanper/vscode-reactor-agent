{
  "name": "vscode-reactor-launcher",
  "publisher": "org.gap",
  "displayName": "vscode-reactor-launcher",
  "description": "Launch application with Project Reactor hooks for better debugging.",
  "version": "0.0.1",
  "license": "EPL-2.0",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:java"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "debuggers": [
      {
        "type": "java",
        "languages": [
          "java"
        ],
        "configurationAttributes": {
          "launch": {
            "properties": {
              "enableTracebacks": {
                "type": "boolean",
                "default": false,
                "description": "Enable reactor Tracebacks for current application."
              }
            }
          }
        }
      }
    ]
  },
  "extensionDependencies": [
    "redhat.java",
    "vscjava.vscode-java-debug"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build-agent": "./node_modules/.bin/gulp build-agent"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "ts-loader": "^9.4.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "@vscode/test-electron": "^2.3.2",
    "gulp": "4.0.2"
  }
}